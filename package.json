{
  "name": "ascend",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "@orpc/server": "^1.10.0",
      "@orpc/client": "^1.10.0",
      "@orpc/openapi": "^1.10.0",
      "@orpc/zod": "^1.10.0",
      "@prisma/client": "^7.0.1",
      "better-auth": "^1.4.5",
      "dotenv": "^17.2.2"
    }
  },
  "scripts": {
    "check": "biome check --write .",
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "db:push": "turbo -F @ascend/db db:push",
    "db:studio": "turbo -F @ascend/db db:studio",
    "db:generate": "turbo -F @ascend/db db:generate",
    "db:migrate": "turbo -F @ascend/db db:migrate"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "@biomejs/biome": "2.3.8",
    "ultracite": "6.3.9",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "@types/node": "^22.13.11"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  },
  "packageManager": "bun@1.3.3"
}
